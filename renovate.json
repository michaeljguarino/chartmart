{
  "extends": [
    "config:base",
    ":dependencyDashboard",
    ":prHourlyLimit4",
    ":prConcurrentLimit10"
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "enabled": true
    },
    {
      "matchManagers": ["npm"],
      "addLabels": [
        "frontend"
      ]
    },
    {
      "matchManagers": ["mix"],
      "addLabels": [
        "backend"
      ]
    }
  ],
  "labels": ["dependencies"],
  "separateMinorPatch": true
}
